# Apple Silicon (M1/M2) Configuration
# Optimized for ARM64 architecture

# Gazebo Configuration for Apple Silicon
GAZEBO_IMAGE=arm64v8/gazebo:gzserver11-focal
GAZEBO_PLATFORM=linux/arm64

# Display Configuration
DISPLAY=:0

# Resource Limits (optimized for Apple Silicon)
OLLAMA_MEMORY_LIMIT=8G
OLLAMA_CPU_LIMIT=4.0
GAZEBO_MEMORY_LIMIT=4G
GAZEBO_CPU_LIMIT=2.0
ROS2_MEMORY_LIMIT=2G
ROS2_CPU_LIMIT=2.0
AI_MEMORY_LIMIT=2G
AI_CPU_LIMIT=2.0

# Performance Settings
GAZEBO_USE_HEADLESS=false
GAZEBO_VERBOSE=true
ROS2_VERBOSE=true

# Network Configuration
DOCKER_NETWORK_MODE=bridge 