# AMD64/x86_64 Configuration
# Uses platform emulation for Apple Silicon

# Gazebo Configuration for AMD64
GAZEBO_IMAGE=gazebo:gzserver11-focal
GAZEBO_PLATFORM=linux/amd64

# Display Configuration
DISPLAY=:0

# Resource Limits (optimized for emulation)
OLLAMA_MEMORY_LIMIT=8G
OLLAMA_CPU_LIMIT=4.0
GAZEBO_MEMORY_LIMIT=6G
GAZEBO_CPU_LIMIT=3.0
ROS2_MEMORY_LIMIT=2G
ROS2_CPU_LIMIT=2.0
AI_MEMORY_LIMIT=2G
AI_CPU_LIMIT=2.0

# Performance Settings
GAZEBO_USE_HEADLESS=false
GAZEBO_VERBOSE=true
ROS2_VERBOSE=true

# Emulation Settings
DOCKER_PLATFORM_EMULATION=true 