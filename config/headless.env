# Headless Configuration
# Optimized for server deployment without GUI

# Gazebo Configuration for Headless
GAZEBO_IMAGE=arm64v8/gazebo:gzserver11-focal
GAZEBO_PLATFORM=linux/arm64

# Display Configuration (headless)
DISPLAY=
GAZEBO_USE_HEADLESS=true

# Resource Limits (optimized for headless)
OLLAMA_MEMORY_LIMIT=8G
OLLAMA_CPU_LIMIT=4.0
GAZEBO_MEMORY_LIMIT=3G
GAZEBO_CPU_LIMIT=2.0
ROS2_MEMORY_LIMIT=2G
ROS2_CPU_LIMIT=2.0
AI_MEMORY_LIMIT=2G
AI_CPU_LIMIT=2.0

# Performance Settings
GAZEBO_VERBOSE=false
ROS2_VERBOSE=false

# Network Configuration
DOCKER_NETWORK_MODE=bridge 